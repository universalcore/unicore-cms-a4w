<div metal:use-macro="view.global_template">
    <div metal:fill-slot="content" class="articles">

        <div class="h1">
            <a href="/content/list/${page.primary_category.uuid}/">${page.primary_category.title}</a>
        </div>

        <div class="detail">
            <div class="head">
                <div class="img"><img src="/static/img/avatar.png"/></div>
                <div class="meta">${page.created_at.strftime('%d %b %Y')}</div>
                <div class="h2">${page.title}</div>
            </div>
            <div class="clr"></div>
            <p>${structure:page.content}</p>
        </div>
    </div>
</div>
